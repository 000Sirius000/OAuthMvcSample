<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OAuthMvcSample</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">OAuthMvcSample</a>
            <div>
                <a class="btn btn-outline-light me-2" href="/Subroutines/Bmi">ІМТ</a>
                <a class="btn btn-outline-light me-2" href="/Subroutines/Temp">Температура</a>
                <a class="btn btn-outline-light me-2" href="/Subroutines/Password">Паролі</a>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-outline-info" href="/Account/Profile">Профіль</a>
                    <a class="btn btn-danger ms-2" href="/Account/Logout">Вийти</a>
                }
                else
                {
                    <a class="btn btn-outline-light ms-2" href="/Account/Login">Увійти</a>
                    <a class="btn btn-outline-warning ms-2" href="/Account/Register">Реєстрація</a>
                }
            </div>
        </div>
    </nav>
    <div class="container my-4">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
