@model OAuthMvcSample.Models.PasswordGenInput
@{
    ViewData["Title"] = "Підпрограма: Паролі";
}
<h2>Генератор паролів</h2>
<p>Опишіть параметри — отримаєте випадковий пароль.</p>
<form method="post">
    <div class="mb-3">
        <label asp-for="Length" class="form-label"></label>
        <input asp-for="Length" class="form-control" />
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="UseUpper" class="form-check-input" />
        <label asp-for="UseUpper" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="UseLower" class="form-check-input" />
        <label asp-for="UseLower" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="UseDigits" class="form-check-input" />
        <label asp-for="UseDigits" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="UseSymbols" class="form-check-input" />
        <label asp-for="UseSymbols" class="form-check-label"></label>
    </div>
    <button class="btn btn-primary mt-2">Згенерувати</button>
</form>
@if (!string.IsNullOrEmpty(Model.Result))
{
    <hr />
    <p><strong>Пароль:</strong> <code>@Model.Result</code></p>
}
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
